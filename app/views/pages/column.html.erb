<div class="content">
  <div class="wrap">
    <div class="services">
      <div class="services-sidebar">
        <h3>類別</h3>
         <ul>
            <li>
              <%= link_to column_path do %>
                <span class="glyphicon glyphicon-chevron-right"></span>&nbsp&nbsp全部文章
              <% end %>
            </li>
            <% @categories.each do |c| %> 
              <li> 
                <%= link_to category_path(c) do %>
                  <span class="glyphicon glyphicon-chevron-right"></span>&nbsp&nbsp<%= c.name %>
                <% end %>
              </li>
            <% end %>
         </ul>
      </div>            
      <div class="service-content">
        <h3>專欄文章</h3>
        <% @posts.each do |p| %>
          <ul>          
            <li>
              <p>
                <%= link_to post_path(p) do %>
                <span id="archive-date"><%= p.created_at.strftime("%Y-%m-%d") %></span>                    
                 <%= p.title %>
                 &nbsp
                 <span class="label label-default pull-right"><%= p.category.name %></span>                 
                <% end %>
              </p>
            </li>
            <div class="clear"> </div>
          </ul>
        <% end %>
           
      </div>
      <div class="clear"> </div>
    </div>
    <div class="clear"> </div>
  </div>
</div>  
