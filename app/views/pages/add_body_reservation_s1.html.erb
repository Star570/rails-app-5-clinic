<div class="services">         
  <div class="service-sidebar">
    <%= render partial: "backstage_sidebar" %>
  </div>        
  <div class="service-display">
    <h3>體雕代客預約</h3>    
    <br>     
    <div class="row">
      <div class="bs-wizard" style="border-bottom:0;">
        <div class="step-long bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">[<%= @user.name %>]&nbsp預約日期</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
        </div>

        <div class="step-long bs-wizard-step active"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">預約時段</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
        </div>
        
        <div class="step-long bs-wizard-step disabled"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">完成預約</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
          <span class="bs-wizard-dot"></span>
        </div>
      </div>
    </div>

    <br>
    <% @calendar_user = @user %>
    <%= month_calendar do |date| %>
      <%= date.strftime("%d") %><br>
      <% booking_slots = @booking_slots.select{|b| b.booking_date == date and b.is_booked == false } %>
      <div style="text-align: center;">      
        <% if date < Date.today %>
          N/A<br><br><br>
        <% elsif booking_slots.count > 0 %>
          <% morning_count = booking_slots.select{|b| b.time_slot < 24}.count %>
          <% afternoon_count = booking_slots.select{|b| b.time_slot >= 24 and b.time_slot < 36}.count %>
          <% evenning_count = booking_slots.select{|b| b.time_slot >= 36}.count %>                                  
          <% if morning_count > 0 %>
            <%= link_to backstage_add_body_reservation_s2_path(:date => date, :slot => "上午", :user => params[:user]) do %>
              上午 <%= "0" if morning_count < 10 %><%= morning_count %><br>
            <% end %>       
          <% else %>
              上午 <%= "0" if morning_count < 10 %><%= morning_count %><br>
          <% end %>
          <% if afternoon_count > 0 %>
            <%= link_to backstage_add_body_reservation_s2_path(:date => date, :slot => "下午", :user => params[:user]) do %>
              下午 <%= "0" if afternoon_count < 10 %><%= afternoon_count %><br>
            <% end %>           
          <% else %>
              下午 <%= "0" if afternoon_count < 10 %><%= afternoon_count %><br>
          <% end %>
          <% if evenning_count > 0 %>
            <%= link_to backstage_add_body_reservation_s2_path(:date => date, :slot => "晚上", :user => params[:user]) do %>
              晚上 <%= "0" if evenning_count < 10 %><%= evenning_count %>
            <% end %>             
          <% else %>
              晚上 <%= "0" if evenning_count < 10 %><%= evenning_count %>
          <% end %>
        <% else %>
          無名額<br><br><br>
        <% end %>      
      </div>        
    <% end %>   
  </div>    
  <div class="clear"> </div>
</div>
<div class="clear"> </div>