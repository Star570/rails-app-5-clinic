<div class="services">         
  <div class="service-sidebar">
    <%= render partial: "backstage_sidebar" %>
  </div>        
  <div class="service-display">
    <h3>修改手療描述</h3>        
    <br>
    <%= simple_form_for @reservation, url: backstage_edit_hand_reservation_path(r: @reservation) do |f| %>   
      <div class="col-xs-7" style="font-size:1.2em">
        <h4>管理者您好！
            <br><br>
            此筆是客人 <%= @reservation.user.name %> 預約 <%= @reservation.booking_slot.booking_date %>&nbsp<%=show_time_slot(@reservation.booking_slot.time_slot) %> 時段
        </h4>      
        <br>

        <div class="form-group">   
          <%= f.input :desc, label:"症狀描述：", input_html: { class: "form-control"} %>
          <br>    
          <%= f.submit "完成修改", disable_with: 'Submitting...', class: "btn btn-primary"%>        
          <%= link_to "返回前頁", :back, class: "btn btn-default" %>         
        </div>   
      </div>          
    <% end %>
    <br><br>          
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>