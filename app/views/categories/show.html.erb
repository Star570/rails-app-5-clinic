<div class="services">
  <div class="service-sidebar">
    <%= render partial: "category_sidebar" %>
  </div>            
  <div class="service-content">
    <h3>
      <%= @category.name %> &nbsp&nbsp&nbsp

      <% if logged_in_as_admin? %>               
        <%= link_to edit_category_path(@category), class:"btn btn-xs btn-primary" do %>   
          <big><span class="glyphicon glyphicon-pencil"></span></big>
        <% end %>        
        <%= link_to category_path(@category), 
            method: :delete, data: {confirm: "你確定刪除此分類嗎, 亦會刪除分類下所有文章?"}, 
            class:"btn btn-xs btn-primary" do %>
          <big><span class="glyphicon glyphicon-remove"></span></big>
        <% end %>    
      <% end %>                 
    </h3>     
                
    <table class="table table-hover" id="table-post">
      <tbody>
        <% @posts.each do |p| %>    
          <tr>
            <td style="width: 79%; border: none;">
              <div class="table-post-title">
                <%= link_to p.title, post_path(p) %>
              </div>
              <div class="table-post-date">       
                <%= time_ago_in_words(p.updated_at) %>前
              </div>                                   
            </td>

            <td style="width: 15%; border: none;">
               <span class="label label-default pull-right" style="font-size: 1.2em;"><%= p.category.name %></span>       
            </td>

            <td style="width: 3%; border: none;">     
              <% if logged_in_as_admin? %>
                <% if p.seeable %>
                  <%= link_to modify_seeable_posts_path(post: p) do %>
                    <span class="glyphicon glyphicon-eye-open" style="font-size: 1.5em; top: 0.2em; color: black"></span>
                  <% end %>
                <% else %>
                  <%= link_to modify_seeable_posts_path(post: p) do %>
                    <span class="glyphicon glyphicon-eye-close" style="font-size: 1.5em; top: 0.2em; color: #ccc"></span>
                  <% end %>              
                <% end %>
              <% end %>                      
            </td>  

            <td style="width: 3%; border: none;">     
              <% if logged_in_as_admin? %>
                <%= link_to post_path(p), method: :delete, data: {confirm: "你確定刪除此專欄嗎?"} do %>
                  <span class="glyphicon glyphicon-remove" style="font-size: 1.5em; top: 0.2em;"></span>
                <% end %>                   
              <% end %>                      
            </td>    

          </tr>
        <% end %>  
      </tbody>
    </table>
    <div class="paginate"><%= paginate @posts %></div>
    <br><br>
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>
