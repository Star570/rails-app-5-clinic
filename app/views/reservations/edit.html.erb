<div class="services">
  <div class="service-sidebar">
    <%= render partial: "reservation_sidebar" %>
  </div>            
  <div class="service-display">
    <h3>修改<%= @reservation.booking_slot.booking_type == 0 ? "手療" : "體雕"%>描述</h3>        
    <br>
    <%= simple_form_for @reservation do |f| %>   
      <div class="col-xs-7">
        <h4><%= current_user.name %>您好！
            <br><br>
            此筆預約日期是&nbsp<%= @reservation.booking_slot.booking_date %>&nbsp<%=show_time_slot(@reservation.booking_slot.time_slot) %>時段
        </h4>      
        <br>

        <div class="form-group">   
          <%= f.input :desc, label:"症狀描述：", input_html: { class: "form-control"} %>                            
          <br>    
          <%= f.submit "完成修改", disable_with: 'Submitting...', class: "btn btn-primary"%>     
        </div>
      </div>
    <% end %>     
    <br><br>      
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>
