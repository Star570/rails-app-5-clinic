<div class="services">
  <%= render partial: "reservation_nav" %>           
  <div class="service-content">
    <div class="page-header">
      <% if @reservation.booking_slot.booking_type == 0 %>
        <h1><%= link_to "手療預約系統", hand_reservations_path %></h1>
      <% else %>
        <h1><%= link_to "體雕預約系統", body_reservations_path %></h1>      
      <% end %>
    </div>   
    <% if current_user.black %>
      <h4>您至 <%= current_user.black_date %> 前無法預約，請電洽。</h4>
    <% else %>       
      <div class="row">
        <div class="bs-wizard" style="border-bottom:0;">
          <div class="step-long bs-wizard-step complete">
            <div class="text-center bs-wizard-stepnum">點選預約日期</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <span class="bs-wizard-dot"></span>
          </div>
          
          <div class="step-long bs-wizard-step complete"><!-- complete -->
            <div class="text-center bs-wizard-stepnum">點選預約時段</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <span class="bs-wizard-dot"></span>
          </div>
          
          <div class="step-long bs-wizard-step complete"><!-- complete -->
            <div class="text-center bs-wizard-stepnum">完成預約</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <span class="bs-wizard-dot"></span>
            <span class="bs-wizard-dot"></span>
          </div>
        </div>
      </div>        
      <h3><%= current_user.name %>您好！
          <br><br>
          您已預約成功<%= @reservation.booking_slot.booking_type == 0 ? "手療" : "體雕" %>療程&nbsp&nbsp<%= params[:date] %> <%= show_time_slot(params[:slot].to_i) %>
      </h3>   
      <br>
      <%= link_to "前往查看預約記錄!", show_user_reservations_path, class: "btn btn-lg btn-primary" %>        
    <% end %>   
    <br><br>    
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>
