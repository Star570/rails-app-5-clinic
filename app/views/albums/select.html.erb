<div class="services">         
  <div class="service-album">
    <%= render partial: 'nav' %>

    <div class="page-header" style="padding-left: 20px;">  
      <h1>選擇相簿</h1>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-5" style="padding-left: 30px;">    
        <%= simple_form_for @album, { :class => 'form-inline' } do |f| %>
          <div class="form-group post-form">           
            <%= f.input :title, label:"新增相簿：" do %> 
              <div class="col-xs-11">
                <%= f.input_field :title, class: "form-control" %>
              </div>                
              <div class="col-xs-1" style="padding: 0px; top: -1px;">
                <%= button_tag( :class => "button_green btn btn-primary") do %>
                  <span class="glyphicon glyphicon-plus"></span>
                <% end %>    
              </div>                
            <% end %> 
          </div>   
        <% end %>   
      </div>        
    </div>          

    <br><br> 
    <div class="row">
      <div class="col-xs-5" style="padding-left: 30px;">    
        <%= simple_form_for @album, :url => redirect_albums_path do |f| %>
          <div class="col-xs-12">
            <div class="form-group post-form">   
              <%= f.input :id, label: '或選擇相簿', include_blank: false, 
                           collection: Album.all,
                           label_method: :title,
                           value_method: :id, 
                           selected: params[:select_album] ? Album.find(params[:select_album]).id : Album.first.id,
                           input_html: { class: "form-control"} %>                     
            </div>    
            <br><br>
            <%= f.submit "下一步", disable_with: 'Submitting...', class: "btn btn-lg btn-primary"%>
          </div>            
        <% end %>    
      </div>        
    </div>        
    <br><br>  
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>