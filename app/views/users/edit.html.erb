<div class="services">         
  <div class="service-form">
    <div> 
      <h3>修改個人資料：</h3> 

      <%= simple_form_for @user do |f| %>
        <div class="form-group">      
          <%= f.input :name, label:"中文姓名", input_html: { class: "form-control"} %>       
        </div>    
        <div class="form-group">      
          <% if @user.verified %>
            <%= f.input :email, label:"電子信箱", disabled: true, input_html: { class: "form-control"} %>       
          <% else %>
            <%= f.input :email, label:"電子信箱", input_html: { class: "form-control"} %>     
          <% end %>
        </div>                    
        <div class="form-group">      
          <%= f.input :phone, label:"手機號碼", input_html: { class: "form-control"} %>       
        </div>    
        <br>                 
        <%= f.submit "確認", disable_with: 'Submitting...', class: "btn btn-primary"%>
      <% end %>          
      <br><br><br>
    </div>
  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>


