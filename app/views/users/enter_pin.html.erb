<div class="services">         
  <div class="service-form">
    <div class="container">
      <div class="row bs-wizard" style="border-bottom:0;">
        <div class="col-xs-2 bs-wizard-step complete">
          <div class="text-center bs-wizard-stepnum">輸入資料</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
        </div>
        
        <div class="col-xs-2 bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">確認郵箱</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
        </div>
        
        <div class="col-xs-2 bs-wizard-step active"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">完成註冊</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <span class="bs-wizard-dot"></span>
          <span class="bs-wizard-dot"></span>
        </div>
      </div>
    </div>

    <div> 
      <h3>請輸入驗證碼四位數字</h3> 

      <%= form_tag users_verify_pin_path do |f| %> 
        <%= hidden_field_tag 'hidden_phone_number', @user.phone %> 
        <div class="form-group"> 
          <%= text_field_tag :pin,  nil, class: "form-control" %> 
        </div> 
        <br>
        <%= submit_tag "確認", class: "btn btn-primary" %> 
      <% end %> 

      <br><br><br>
    </div>

  </div>
  <div class="clear"> </div>
</div>
<div class="clear"> </div>


